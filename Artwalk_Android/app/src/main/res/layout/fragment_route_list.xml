<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mapbox.maps.MapView
            android:id="@+id/mapView_routeList"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.3" />

        <View
            android:id="@+id/view_routeList_infoBox"
            app:layout_constraintTop_toBottomOf="@id/mapView_routeList"
            app:layout_constraintBottom_toTopOf="@id/recyclerView_routeList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1" />

        <TextView
            android:id="@+id/button_routeList_toRouteDraw"
            app:layout_constraintEnd_toEndOf="@id/view_routeList_infoBox"
            app:layout_constraintBottom_toBottomOf="@id/view_routeList_infoBox"
            app:layout_constraintTop_toTopOf="@id/view_routeList_infoBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toDrawButton_title"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_routeList"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/view_routeList_infoBox"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.6"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
