<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="vm"
            type="com.a401.artwalk.view.record.list.RecordDetailViewModel"/>

        <variable name="hour" type="Integer" />
        <variable name="minute" type="Integer" />
        <variable name="second" type="Integer" />
        <variable name="distance" type="Double" />
        <variable name="detail" type="String" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/record_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:menu="@menu/record_detail_toolbar"
            app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ImageButton_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_button_bg_50"
            android:src="@drawable/ic_detail_back_24"
            />
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/imageview_detail_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/record_detail_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:id="@+id/view_detail_infoBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageview_detail_thumbnail"
            app:layout_constraintBottom_toTopOf="@id/edittext_edit_detail"
            android:layout_marginTop="15dp"
            android:background="@color/neutral01"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <LinearLayout
            android:id="@+id/view_detail_distanceBox"
            app:layout_constraintStart_toStartOf="@id/view_detail_infoBox"
            app:layout_constraintTop_toTopOf="@id/view_detail_infoBox"
            app:layout_constraintBottom_toBottomOf="@id/view_detail_infoBox"
            app:layout_constraintEnd_toStartOf="@id/view_detail_durationBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/record_distance_title"
            style="@style/body_title_font_style"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/distance_format(distance)}"
            android:hint="4.14Km"
            style="@style/body_regular_text_font_style"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_detail_durationBox"
            app:layout_constraintEnd_toEndOf="@id/view_detail_infoBox"
            app:layout_constraintTop_toTopOf="@id/view_detail_infoBox"
            app:layout_constraintBottom_toBottomOf="@id/view_detail_infoBox"
            app:layout_constraintStart_toEndOf="@id/view_detail_distanceBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/record_duration_title"
                style="@style/body_title_font_style"/>

            <TextView
                android:id="@+id/textView_durationBox_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/duration_format(hour, minute, second)}"
                android:hint="1시간 8분 10초"
                style="@style/body_regular_text_font_style"/>

        </LinearLayout>

        <TextView
            android:id="@+id/title_edittext_detail"
            style="@style/body_regular_text_font_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메모"
            app:layout_constraintBottom_toTopOf="@id/edittext_edit_detail"
            app:layout_constraintStart_toStartOf="@+id/view_detail_distanceBox" />

        <EditText
            android:id="@+id/edittext_edit_detail"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:hint="메모를 입력해주세요"
            android:text="@{detail}"
            android:textColor="@color/neutral06"
            android:textColorHint="#ffffff"
            app:layout_constraintBottom_toBottomOf="@id/detail_button_box"
            app:layout_constraintEnd_toEndOf="@+id/view_detail_durationBox"
            app:layout_constraintStart_toStartOf="@+id/view_detail_distanceBox"
            app:layout_constraintTop_toBottomOf="@id/view_detail_infoBox" />

        <LinearLayout
            android:id="@+id/detail_button_box"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/edittext_edit_detail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_detail_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:textColor="@color/neutral01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/detail_button_box" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
