<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_userPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="설정 및 이용약관"
                style="@style/header_title_font_style"/>

            <ImageButton
                android:id="@+id/ImageButton_setting_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_button_bg_50"
                android:src="@drawable/ic_detail_back_24"
                />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:id="@+id/LinearLayout_setting_howToUse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/how_to_use_title"
                    style="@style/body_regular_text_font_style"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_button_bg_50"
                    android:src="@drawable/ic_setting_next_24"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:id="@+id/linearLayout_setting_privacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_policy_title"
                    style="@style/body_regular_text_font_style"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_button_bg_50"
                    android:src="@drawable/ic_setting_next_24"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:id="@+id/linearLayout_setting_locationPolicy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location_policy_title"
                    style="@style/body_regular_text_font_style"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_button_bg_50"
                    android:src="@drawable/ic_setting_next_24"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="4dp"
                android:background="@color/neutral02"/>

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:id="@+id/linearLayout_setting_logout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout_title"
                    style="@style/body_regular_text_font_style"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_button_bg_50"
                    android:src="@drawable/ic_setting_next_24"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:id="@+id/linearLayout_setting_withdraw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/withdraw_title"
                    android:textColor="@color/error01"
                    style="@style/body_regular_text_font_style"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_button_bg_50"
                    android:src="@drawable/ic_setting_next_24"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>
