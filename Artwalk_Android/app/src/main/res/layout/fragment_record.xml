<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable
        name="vm"
        type="com.a401.artwalk.view.record.RecordViewModel"/>
</data>
    <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintlayout_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mapbox.maps.MapView
        android:id="@+id/mapView_record"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/view_record_infoBox"
        />

    <!-- 시작 및 종료 버튼-->
    <ImageButton
        android:id="@+id/imagebutton_record_startbutton"
        app:layout_constraintBottom_toTopOf="@id/view_record_infoBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_button_bg_50"
        android:checked="false"
        android:src="@drawable/toggle_record_startbutton"
        android:onClick="@{() -> vm.onClickStartButton()}"/>

    <!-- 나가기 버튼 -->
    <ImageButton
        android:id="@+id/imagebutton_record_quitbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_button_bg_50"
        app:tint="#E5E5E5"
        android:alpha="0.6"
        app:layout_constraintStart_toStartOf="@id/constraintlayout_record"
        app:layout_constraintTop_toTopOf="@id/constraintlayout_record"
        android:src="@drawable/ic_quit_24" />

    <!-- 하단 기록 상자-->
    <View
        android:id="@+id/view_record_infoBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/neutral01"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <!--기록-->
    <LinearLayout
        android:id="@+id/view_record_distanceBox"
        app:layout_constraintStart_toStartOf="@id/view_record_infoBox"
        app:layout_constraintTop_toTopOf="@id/view_record_infoBox"
        app:layout_constraintBottom_toBottomOf="@id/view_record_infoBox"
        app:layout_constraintEnd_toStartOf="@id/view_record_durationBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/route_distance_title"
            style="@style/body_title_font_style"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/distance_format(vm.distance)}"
            android:hint="4.14Km"
            style="@style/body_regular_text_font_style"/>

    <!--거리-->
    </LinearLayout>

    <!--예상시간-->
    <LinearLayout
        android:id="@+id/view_record_durationBox"
        app:layout_constraintEnd_toEndOf="@id/view_record_infoBox"
        app:layout_constraintTop_toTopOf="@id/view_record_infoBox"
        app:layout_constraintBottom_toBottomOf="@id/view_record_infoBox"
        app:layout_constraintStart_toEndOf="@id/view_record_distanceBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/route_duration_title"
            style="@style/body_title_font_style"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/duration_format(vm.durationHour, vm.durationMinute, vm.durationSecond)}"
            android:hint="1시간 8분 10초"
            style="@style/body_regular_text_font_style"/>

        </LinearLayout>

<!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--        android:id="@+id/back_to_camera_tracking_mode"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="end|bottom"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/imagebutton_record_startbutton"-->
<!--        app:layout_constraintStart_toEndOf="@id/view_record_durationBox"-->
<!--        app:srcCompat="@drawable/ic_record_my_location"-->
<!--        mapbox:fab_size="normal" />-->

        <ImageButton
            android:id="@+id/imagebutton_change_camera_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle_ic_button_bg"
            android:backgroundTint="@color/neutral05"
            android:src="@drawable/ic_record_my_location"
            app:layout_constraintBottom_toBottomOf="@id/imagebutton_record_startbutton"
            app:layout_constraintStart_toEndOf="@id/view_record_durationBox"
            android:onClick="@{() -> vm.onClickCurButton()}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </layout>