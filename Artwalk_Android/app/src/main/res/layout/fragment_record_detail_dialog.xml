<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2B353E"
        android:padding="24dp">

        <TextView
            android:id="@+id/textview_delete_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정말 삭제 하시겠습니까?"
            android:textSize="20dp"
            android:textColor="@color/neutral02"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/linearLayout_detail_buttonBox"
            />

        <LinearLayout
            android:id="@+id/linearLayout_detail_buttonBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textview_delete_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="0.5"
            android:layout_marginVertical="12dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <Button
                android:id="@+id/button_record_detail_quit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/neutral04"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:text="취소"
                android:textColor="@color/neutral01"/>

            <Button
                android:id="@+id/button_record_detail_delete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:backgroundTint="@color/error01"
                android:text="삭제"
                android:textColor="@color/neutral01" />

        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>